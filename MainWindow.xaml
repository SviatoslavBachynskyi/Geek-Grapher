<Window x:Class="GeekGrapher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeekGrapher"
        mc:Ignorable="d"
        Icon ="Icon.ico"
        Title="Geek Grapher" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" InputGestureText="Ctrl+N"/>
                <Separator />
                <MenuItem Header="_Open" InputGestureText="Ctrl+O"/>
                <MenuItem Header="_Open Recent ->"/>
                <Separator />
                <MenuItem Header="_Save" InputGestureText="Ctrl+S"/>
                <MenuItem Header="_Save as" />
                <Separator />
                <MenuItem Header="_Close" InputGestureText="Ctrl+Q"/>
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
            <MenuItem Header="_Start Page" InputGestureText="Ctrl+F5"/>
            <MenuItem Header="_Settings" Click="Settings_Click"/>
            <MenuItem Header="_Help" Click="Help_Click"/>
        </Menu>
        <Grid DockPanel.Dock="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="5*"></RowDefinition>
            </Grid.RowDefinitions>
            <Viewbox Grid.Row="0" HorizontalAlignment="Center" Grid.Column="1" Margin="0,0,0,0">
                <TextBlock  MaxHeight="60" Padding="5,5,5,5" >Select one of possible templates</TextBlock>
            </Viewbox>
            <Grid Grid.Row="1" Margin="15,15,15,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="2*"></RowDefinition>
                    <RowDefinition Height="6*"></RowDefinition>
                </Grid.RowDefinitions>
                <Viewbox Grid.Row="0" Grid.Column="0">
                    <TextBlock>Affine transformations</TextBlock>
                </Viewbox>
                <Viewbox Grid.Row="0" Grid.Column="1">
                    <TextBlock>Fractal Painter</TextBlock>
                </Viewbox>
                <Viewbox Grid.Row="0" Grid.Column="2">
                    <TextBlock>Image Converter</TextBlock>
                </Viewbox>
                <TextBlock Grid.Row="1" Grid.Column="0" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center">
                            You can paint parallelgoram in any color move and rotate parallegoram relative to one of it's vertexs
                </TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center">
                            You can choose one of functions that represents fractal, it's color and color model
                </TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="2" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center">
                            Convert image from one color scheme to another, set yellow saturation
                </TextBlock>
                <Grid Grid.Row="2" Grid.Column="0" Margin="5,0,5,0" MouseLeftButtonDown="AffineTransformations_MouseLeftButtonDown">
                <Image  VerticalAlignment="Center"  Source="/images/parallelogram.png" />
                </Grid>
                <Grid Grid.Row="2" Grid.Column="1" Margin="5,0,5,0" MouseLeftButtonDown="FractalPainter_MouseLeftButtonDown">
                    <Image  VerticalAlignment="Center"  Source="/images/fractal sample.png" />
                </Grid>
                <Grid Grid.Row="2" Grid.Column="2" Margin="5,0,5,0" MouseLeftButtonDown="ImageConverter_MouseLeftButtonDown">
                    <Image  VerticalAlignment="Center"  Source="/images/cmyk.gif" />
                </Grid>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
