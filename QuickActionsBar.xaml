<UserControl x:Class="GeekGrapher.QuickActionsBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeekGrapher"
             mc:Ignorable="d" 
             d:DesignHeight="45" d:DesignWidth="180">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0">
        </Button>
        <Button Grid.Column="1">
            <StackPanel Orientation="Horizontal">
                <Viewbox>
                <TextBlock Padding="5,5,5,5"
                    FontFamily="{StaticResource FontAwesomeFreeSolid}"
                           Text="{StaticResource FontAwesomeRedo}" Foreground="green"
                 ></TextBlock>
                </Viewbox>
            </StackPanel>
        </Button>
        <Button Grid.Column="2"></Button>
    </Grid>
</UserControl>
